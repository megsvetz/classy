<h1>Category List!</h1>
<hr />
<div class="list-group">
<% @cats.each do |cat| %>
  <button type="button" class="list-group-item"><%= link_to cat.name, cat_path(cat.id) %>
    <div class="pull-right">
      <a href="<%= edit_cat_path(cat) %>" class="btn btn-info"><span class = "glyphicon glyphicon-pencil"></span></a>
      <a href="<%= cat_path(cat) %>" class="btn btn-danger" data-method="delete"><span class="glyphicon glyphicon-trash"></span></a>
    </div>
  </button>
      
  <% end %>
</div>